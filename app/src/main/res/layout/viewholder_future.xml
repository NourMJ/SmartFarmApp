<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="day"
        android:textColor="#5B61A1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/sunny"
        app:layout_constraintStart_toEndOf="@id/dayText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/statusTxt"
        android:textColor="#5B61A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Status"
        app:layout_constraintStart_toEndOf="@id/pic2"
        app:layout_constraintTop_toTopOf="@id/dayText"
        app:layout_constraintBottom_toBottomOf="@id/dayText" />



    <TextView
        android:id="@+id/high"
        android:textColor="#5B61A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_marginStart="16dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/statusTxt"
        app:layout_constraintTop_toTopOf="@id/dayText"
        app:layout_constraintBottom_toBottomOf="@id/dayText" />
    <TextView
        android:id="@+id/low"
        android:textColor="#5B61A1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_marginRight="25dp"
        app:layout_constraintStart_toEndOf="@id/high"
        app:layout_constraintTop_toTopOf="@id/dayText"
        app:layout_constraintBottom_toBottomOf="@id/dayText" />
</androidx.constraintlayout.widget.ConstraintLayout>
